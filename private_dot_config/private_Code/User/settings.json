{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.hypothesis": true,
        "**/.idea": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.venv": true,
        "**/venv": true
    },
    "files.insertFinalNewline": true,
    "editor.renderWhitespace": "trailing",
    "editor.formatOnSave": true,
    "diffEditor.codeLens": true,
    // Fonts
    "editor.codeLensFontFamily": "JetBrains Mono",
    "editor.fontFamily": "JetBrains Mono",
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "editor.fontLigatures": true,
    // terminal
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.defaultProfile.linux": "tmux",
    "application.shellEnvironmentResolutionTimeout": 20,
    // Git
    "git.confirmSync": false,
    "git.autofetch": true,
    "gitlens.hovers.currentLine.over": "line",
    // Javascript
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.wordBasedSuggestions": false,
    },
    // Python
    "python.diagnostics.sourceMapsEnabled": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.addImport.exactMatchOnly": true,
    // python hints
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.callArgumentNames": true,
    "python.analysis.inlayHints.variableTypes": false,
    "python.analysis.typeCheckingMode": "basic",
    // python formatter
    "python.formatting.provider": "none",
    "black-formatter.showNotifications": "onError",
    // python other
    "mypy-type-checker.args": [
        "--strict"
    ],
    "mypy-type-checker.importStrategy": "fromEnvironment",
    "mypy-type-checker.showNotifications": "always",
    "ruff.showNotifications": "always",
    // other
    "browse-lite.chromeExecutable": "/opt/google/chrome/chrome",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "vs-kubernetes": {
        "vscode-kubernetes.minikube-path.linux": "/home/federicober/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },
}
